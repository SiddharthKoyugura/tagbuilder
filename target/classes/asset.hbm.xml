<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.assetsense.tagbuilder.c2.domain.Asset" table="ASSET">
		<id name="id" column="id">
			<generator class="native"/>
		</id>

		<property name="name" column="name" not-null="false"></property>
		<property name="ecn" column="ecn" unique="true" not-null="false"></property>
		<property name="model" column="model" not-null="false"></property>
		<property name="location" column="location" not-null="false"></property>
		
		<many-to-one name="parentAsset" column="parent_asset_id" not-null="false" />
	</class>
</hibernate-mapping>